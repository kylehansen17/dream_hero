<div class="banner"></div>

<div class="tabs">
  <div class="tab-2">
    <label for="tab2-1">Stories</label>
    <input id="tab2-1" name="tabs-two" type="radio" checked="checked">

    <!-- Full width container that centers everything -->
    <div class="container-fluid d-flex flex-column align-items-center my-3">

      <h4 class="text-center w-100">Pick up where you left off...</h4>

      <!-- Center the main story block -->
      <div class="main-story container my-4 d-flex justify-content-center">
        <div class="card-product row align-items-center" style="max-width:900px;">
          <div class="col-md-6">
            <%= image_tag "fantasy_book.avif", class: "img-fluid rounded card-product-img" %>
          </div>
          <div class="card-product-infos col-md-6">
            <h2><%= @front_story.name %></h2>
            <p><%= @front_story.chats %></p>
          </div>
        </div>
      </div>

      <!-- Feature story cards -->
      <div class="container-fluid my-4">
        <div class="row align-items-center justify-content-center">
          <div class="cards col-12 d-flex flex-wrap justify-content-center p-0">
            <% @feature_stories.each do |story| %>
              <div class="card-category col-12 col-sm-6 col-md-4 text-center"
                   style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.3)), url(<%= asset_path 'fantasy_book.avif' %>)">
                <%= story.name %>
              </div>
            <% end %>
          </div>
        </div>
      </div>

    </div>
  </div>

  <div class="tab-2">
    <label for="tab2-2">Characters</label>
    <input id="tab2-2" name="tabs-two" type="radio">
    <div>
      <h4>Tab Two</h4>
      <p>Characters go here</p>
    </div>
  </div>
</div>
