<div class="content-wrap">
  <div class="banner-show-character"></div>
  <div class="main-story container my-4 d-flex justify-content-center">
    <div class="card-product row align-items-center" style="max-width:900px;">
      <div class="col-md-6">
        <%= image_tag "hero.jpg", class: "img-fluid rounded card-product-img" %>
      </div>
      <div class="card-product-infos col-md-6">
        <h2><%= @character.name %></h2>
        <p><%= @character.occupation %></p>
        <p><%= @character.likes %></p>
      </div>
    </div>
  </div>
  <div class="button-container d-flex justify-content-evenly">
    <%= link_to "Stories this character is in", root_path, class: "btn btn-success rounded-pill me-2" %>
    <%= link_to "Use this character...", root_path, class: "btn btn-success rounded-pill me-2" %>
  </div>
</div>
<footer class="footer bg-dark text-white py-3">
  <div class="container text-center">
    <%= link_to root_path do %>
      <i class="fa-solid fa-house me-2"></i>
    <% end %>
    | &copy;
    <%= Time.current.year %>
    Kokai Soundworks
  </div>
</footer>
